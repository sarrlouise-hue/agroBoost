# Environnement
NODE_ENV=production
PORT=3000

# Base de données PostgreSQL
# Remplacer par votre URL de base de données de production
DATABASE_URL=postgresql://user:password@host:port/dbname?sslmode=require

# JWT Configuration
# GÉNÉRER DES CLÉS FORTES EN PRODUCTION
JWT_SECRET=your_strong_jwt_secret_production
JWT_REFRESH_SECRET=your_strong_jwt_refresh_secret_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OTP Configuration
OTP_EXPIRES_IN=5m
OTP_LENGTH=6

# URLs Production
FRONTEND_URL=https://www.allotracteur.com
ADMIN_URL=https://allotracteuradmin.vercel.app
API_URL=https://agro-boost-ruddy.vercel.app

# CORS Configuration
# Liste des origines autorisées séparées par des virgules
ALLOWED_ORIGINS=https://www.allotracteur.com,https://allotracteuradmin.vercel.app

# PayTech Configuration (Production)
PAYTECH_API_KEY=your_paytech_api_key
PAYTECH_API_SECRET=your_paytech_api_secret
PAYTECH_BASE_URL=https://paytech.sn

# PayTech Redirection & IPN
# L'IPN URL doit être accessible publiquement par PayTech
PAYTECH_IPN_URL=https://agro-boost-ruddy.vercel.app/api/payments/webhook/paytech
PAYTECH_SUCCESS_URL=https://www.allotracteur.com/payment-success
PAYTECH_CANCEL_URL=https://www.allotracteur.com/payment-cancel

# Email Configuration (SMTP Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=infos.allotracteur@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM_NAME=AlloTracteur
EMAIL_SUPPORT_EMAIL=support@allotracteur.com

# Cloudinary (Production)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Logs
LOG_LEVEL=info
LOG_FILE_PATH=logs/

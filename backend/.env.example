# Environnement
NODE_ENV=development
PORT=3000

# Base de données PostgreSQL
# Option 1: Utiliser DATABASE_URL (recommandé pour production)
# DATABASE_URL=postgresql://user:password@127.0.0.1:5432/agroboost

# Option 2: Utiliser les variables individuelles
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_NAME=agroboost

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# OTP
OTP_EXPIRES_IN=5m
OTP_LENGTH=6

# Réinitialisation de mot de passe
PASSWORD_RESET_EXPIRES_IN=1h

# Redis (optionnel)
REDIS_URL=redis://127.0.0.1:6379

# Mobile Money - Wave
WAVE_API_KEY=
WAVE_API_SECRET=
WAVE_BASE_URL=https://api.wave.com

# Mobile Money - Orange Money
ORANGE_MONEY_API_KEY=
ORANGE_MONEY_API_SECRET=
ORANGE_MONEY_BASE_URL=

# Mobile Money - Free Money
FREE_MONEY_API_KEY=
FREE_MONEY_API_SECRET=
FREE_MONEY_BASE_URL=

# Google Maps
GOOGLE_MAPS_API_KEY=

# Firebase
FIREBASE_SERVER_KEY=
FIREBASE_PROJECT_ID=

# SMS
SMS_API_KEY=
SMS_API_URL=
SMS_SENDER_ID=

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# Upload de fichiers
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# URLs
FRONTEND_URL=http://localhost:3001
ADMIN_URL=http://localhost:3002

# En développement, toutes les origines sont autorisées par défaut
# En production, spécifiez les origines autorisées (séparées par des virgules)
ALLOWED_ORIGINS=http://localhost:3001,https://votre-frontend.com,https://votre-app-mobile.com
